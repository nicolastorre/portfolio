{% extends "Layout/Backoffice.html.twig" %}

{% block content %}

    <div class="tab-pane fade in active adminTable well" id="articles">
        {% if contacts %}
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Object</th>
                        <th>Message</th>
                        <th></th>  <!-- Actions column -->
                    </tr>
                    </thead>

                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.email }}</a></td>
                            <td>{{ contact.object }}</td>
                            <td>{{ contact.message }}</td>
                            <td>
                                {% include 'Partials/Elements/EditDeleteConfirmDialog.html.twig' with {objectName: 'Contact', object: contact, attr: 'id'}  %}
                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
        {% else %}
            <div class="alert alert-warning">No messages found.</div>
        {% endif %}
    </div>


{% endblock %}