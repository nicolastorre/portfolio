{% extends "Layout/Backoffice.html.twig" %}

{% block content %}

    <div class="tab-pane fade in active adminTable well" id="articles">
        {% if contacts %}
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Object</th>
                        <th>Message</th>
                        <th></th>  <!-- Actions column -->
                    </tr>
                    </thead>

                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.email }}</a></td>
                            <td>{{ contact.object }}</td>
                            <td>{{ contact.message }}</td>
                            <td>
                                <button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#contactDialog{{ contact.id }}"><span class="glyphicon glyphicon-remove"></span>
                                </button>
                                <div class="modal fade" id="contactDialog{{ contact.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                            </div>
                                            <div class="modal-body">
                                                Do you really want to delete this message ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <a href="{{ path('deleteContact', { 'id': contact.id }) }}" class="btn btn-danger">Confirm</a>
                                            </div>
                                        </div><!-- /.modal-content -->
                                    </div><!-- /.modal-dialog -->
                                </div><!-- /.modal -->
                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
        {% else %}
            <div class="alert alert-warning">No messages found.</div>
        {% endif %}
    </div>


{% endblock %}