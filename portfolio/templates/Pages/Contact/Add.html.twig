{% extends 'Layout/Default.html.twig' %}

{% block content %}

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            {% include 'Partials/Elements/Sidebar/Contact.html.twig' %}

            <div class="col-lg-8">
                <div class="well">
                    <h2 class="text-center">{{ title }}</h2>

                    {{ form_start(contactForm, { 'attr': {'class': 'form-horizontal'} }) }}
                    <div class="form-group">
                        {{ form_label(contactForm.email, NULL, { 'label_attr':  {
                            'class': 'col-sm-4 control-label'
                        }}) }}
                        <div class="col-sm-6">
                            {{ form_errors(contactForm.email) }}
                            {{ form_widget(contactForm.email, { 'attr':  {
                                'class': 'form-control'
                            }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.object, NULL, { 'label_attr':  {
                            'class': 'col-sm-4 control-label'
                        }}) }}
                        <div class="col-sm-6">
                            {{ form_errors(contactForm.object) }}
                            {{ form_widget(contactForm.object, { 'attr':  {
                                'class': 'form-control'
                            }}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(contactForm.message, NULL, { 'label_attr':  {
                            'class': 'col-sm-4 control-label'
                        }}) }}
                        <div class="col-sm-6">
                            {{ form_errors(contactForm.message) }}
                            {{ form_widget(contactForm.message, { 'attr':  {
                                'class': 'form-control'
                            }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-3">
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>
                    </div>
                    {{ form_end(contactForm) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}