                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <a href="{{ path('deleteDiploma', { 'id': diploma.id }) }}" class="btn btn-danger">Confirm</a>
                                            </div>
                                        </div><!-- /.modal-content -->
                                    </div><!-- /.modal-dialog -->
                                </div><!-- /.modal -->
                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
        {% else %}
            <div class="alert alert-warning">No diplomas found.</div>
        {% endif %}
        <a href="{{ path('addDiploma', {'idbio': bio.id}) }}"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add diploma</button></a>
    </div>

