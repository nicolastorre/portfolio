                    <tr>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Title</th>
                        <th></th>  <!-- Actions column -->
                    </tr>
                    </thead>

                    {% for diploma in bio.diploma %}
                        <tr>
                            <td>{{ diploma.startDate | date("Y-m-d") }}</td>
                            <td>{{ diploma.endDate | date("Y-m-d") }}</td>
                            <td><a class="articleTitle" href="#">{{ diploma.title }}</a></td>
                            <td>
                                <a href="{{ path('editDiploma', { 'id': diploma.id }) }}" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
