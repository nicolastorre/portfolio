{% extends 'Layout/Backoffice.html.twig' %}

{% block content %}

    <div class="well">
        <h2 class="text-center">{{ title }}</h2>

        {{ form_start(skillForm, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            {{ form_label(skillForm.label, NULL, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(skillForm.label) }}
                {{ form_widget(skillForm.label, { 'attr':  {
                    'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(skillForm.link, NULL, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(skillForm.link) }}
                {{ form_widget(skillForm.link, { 'attr':  {
                    'class': 'form-control'
                }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(skillForm.level, NULL, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-6">
                {{ form_errors(skillForm.level) }}
                {{ form_widget(skillForm.level) }}
                {{ form_widget(skillForm.bio) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-3">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
        {{ form_end(skillForm) }}
    </div>

{% endblock %}