{% extends "Layout/Backoffice.html.twig" %}

{% block content %}

    <div class="tab-pane fade in active adminTable well" id="articles">
    {% if users %}
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Droits</th>
                        <th></th>  <!-- Actions column -->
                    </tr>
                </thead>

                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.role }}</td> <!-- | truncate(50) http://nerdpress.org/2011/11/21/enable-twig-extensions-in-silex/-->
                        <td>
                            {% include 'Partials/Elements/EditDeleteConfirmDialog.html.twig' with {objectName: 'User', object: user, attr: 'id'}  %}
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    {% else %}
        <div class="alert alert-warning">No users found.</div>
    {% endif %}
    <a href="{{ path('addUser') }}"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add user</button></a>
</div>


{% endblock %}