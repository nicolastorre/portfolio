<div class="tab-pane fade in active adminTable well" id="bio">
    <h2>Bio</h2>
    {% if user.bio %}
        <div>
            <a href="{{ path('editBio') }}" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th></th>
                </tr>
                </thead>
                <tr>
                    <th>First name</th><td>{{  user.firstname }}</td>
                </tr>
                <tr>
                    <th>Last name</th><td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Presentation</th><td>{{  user.bio.presentation }}</td>
                </tr>

            </table>
        </div>
    {% else %}
        <div class="alert alert-warning">No bio found.</div>
    {% endif %}
</div>