<div class="tab-pane fade in active adminTable well" id="interests">
    <h2>Interests</h2>
    {% if bio.interest %}
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th>Label</th>
                    <th>Link</th>
                    <th></th>  <!-- Actions column -->
                </tr>
                </thead>

                {% for interest in bio.interest %}
                    <tr>
                        <td>{{ interest.label }}</td>
                        <td>{{ interest.link }}</td>
                        <td>
                            {% include 'Partials/Elements/EditDeleteConfirmDialog.html.twig' with {objectName: 'Interest', object: interest, attr: 'id'}  %}
                        </td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    {% else %}
        <div class="alert alert-warning">No interest found.</div>
    {% endif %}
    <a href="{{ path('addInterest',{'idbio': bio.id}) }}"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add interest</button></a>
</div>