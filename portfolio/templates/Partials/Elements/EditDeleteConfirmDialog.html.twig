{% set ObjId = attribute(object, attr)  %}

{% if objectName != 'Contact' %}
    <a href="{{ path("edit#{objectName}", { 'id': ObjId }) }}" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
{% endif %}
<button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#{{ objectName }}Dialog{{ ObjId }}"><span class="glyphicon glyphicon-remove"></span>
</button>
<div class="modal fade" id="{{ objectName }}Dialog{{ ObjId }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
            </div>
            <div class="modal-body">
                Do you really want to delete this {{ objectName }} ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                {#<a href="{{ path("delete#{objectName}", { 'id': ObjId }) }}" class="btn btn-danger">Confirm</a>#}
                {% include 'Partials/Elements/DeleteForm.html.twig' with {deleteForm: deleteform("delete#{objectName}", ObjId) } %}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->